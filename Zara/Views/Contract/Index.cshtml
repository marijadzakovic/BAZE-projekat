
@{
    Layout = "~/Views/shared/_MainLayout.cshtml";
}

<div>
    <h1>Contracts view</h1>
    <br />
    <div>
        <label>Pretrazi ugovore po radnom mjestu:</label>
        @using (Html.BeginForm("Search", "Contract", FormMethod.Get))
        {
            @Html.TextBox("searchValue", null, new { Class = "form-control" })
            <input type="submit" value="Search" class="btn btn-success" />
        }
    </div>
    <table class="table table-striped">
        <tr>
            <th>Sifra</th>
            <th>Zaposleni</th>
            <th>RadnoMjesto</th>
            <th>Plata</th>
            <th>DatumZaposlenja</th>
            <th>Broj Radnih Sati U Nedelji</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (var item in ViewBag.Contracts)
        {
            <tr>
                <td>@item.Sifra</td>
                <td>@item.ZaposleniID</td>
                <td>@item.RadnoMjesto</td>
                <td>@item.Plata</td>
                <td>@item.DatumZaposlenja</td>
                <td>@item.BrRadnihSatiUNedelji</td>
                <td>
                    <a class="btn btn-light" href="@Url.Action("Edit", "Contract", new { employeeID = item.ZaposleniID})">Edit</a>
                </td>
                <td>
                    <a class="btn btn-dark" href="@Url.Action("Delete", "Contract", new { employeeID = item.ZaposleniID})">Delete</a>
                </td>
            </tr>
        }

    </table>
    <a class="btn btn-danger" href="@Url.Action("Insert", "Contract")">Unesi ugovor</a>
</div>

@section footer{
    <footer>
        &copy; Zara 2022 - Contracts
    </footer>
}