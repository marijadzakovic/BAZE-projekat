@model Zara.Repository.Models.DB.ItemModel
@{
    Layout = "~/Views/shared/_MainLayout.cshtml";
}

<div>
    <h1>Insert new item</h1>

    @using (@Html.BeginForm("Store1", "Item", FormMethod.Post))
    {
       
        <div class="form-group">
            <label>Sifra</label>
            @Html.TextAreaFor(m => m.Sifra, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <label>Naziv</label>
            @Html.TextAreaFor(m => m.Naziv, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <label>Cijena</label>
            @Html.TextAreaFor(m => m.Cijena, new { @class = "form-control" })
        </div>


        <div class="form-group">
            <label>Sektor</label>
            @Html.DropDownListFor(m => m.NazivSektora, new SelectList(ViewBag.Sectors, "Naziv", "Naziv"),
            new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Oznaka Velicine</label>
            @Html.DropDownListFor(m => m.OznakaVelicine, new SelectList(ViewBag.Sizes, "OznakaVelicine", "OznakaVelicine"),
            new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Opis</label>
            @Html.TextAreaFor(m => m.Opis, new { @class = "form-control" })
        </div>
        <br />

        <button type="submit" class="btn btn-primary"> Sacuvaj</button>

    }
</div>
<script>
    function myFunction() {
        @if (!string.IsNullOrEmpty(@ViewBag.Message))
        {
            <p>@ViewBag.Message</p>
        }
    }
</script>
@section footer{
    <footer>
        &copy; Zara 2022 - Insert Item page
    </footer>
}